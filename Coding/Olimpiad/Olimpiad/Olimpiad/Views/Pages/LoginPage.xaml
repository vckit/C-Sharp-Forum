<Page x:Class="Olimpiad.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olimpiad.Views.Pages"
      mc:Ignorable="d" FontSize="15"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Войти в систему">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Код администратора: "/>
                <TextBox Name="txbAdminCode"
                         Text="0000"
                         Width="200"
                         Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel>
                <Button Name="LoginFromAdmin"
                        Content="Войти от Администратора"
                        Click="LoginFromAdmin_Click"
                        IsDefault="True"/>
                <Button Name="LoginFree"
                        Content="Войти как Гость"
                        Click="LoginFree_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
